<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Step Form View -->
    <record id="view_threads_bpm_step_form" model="ir.ui.view">
        <field name="name">threads_bpm.step.form</field>
        <field name="model">threads_bpm.step</field>
        <field name="arch" type="xml">
            <form string="Etapa BPM">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="is_required"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <group>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="sla_enabled"/>
                            <field name="sla_hours" attrs="{'invisible': [('sla_enabled', '=', False)]}"/>
                            <field name="sla_days" attrs="{'invisible': [('sla_enabled', '=', False)]}"/>
                            <field name="sla_deadline" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Checklist" name="checklist">
                            <field name="checklist_ids" mode="tree">
                                <list string="Checklist" editable="bottom">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="is_required"/>
                                    <field name="is_completed" readonly="1"/>
                                    <button name="action_toggle_completed" type="object" string="âœ“"
                                            class="btn btn-sm btn-outline-success"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
