<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ir_cron_access_vault_expire_shares" model="ir.cron">
        <field name="name">Access Vault: Expire temporary shares</field>
        <field name="model_id" ref="model_access_vault_share"/>
        <field name="state">code</field>
        <field name="code">model._cron_expire_shares()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_access_vault_rotation_reminders" model="ir.cron">
        <field name="name">Access Vault: Rotation reminders (D-1 / D0)</field>
        <field name="model_id" ref="model_access_vault_credential"/>
        <field name="state">code</field>
        <field name="code">model._cron_rotation_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>
</odoo>


