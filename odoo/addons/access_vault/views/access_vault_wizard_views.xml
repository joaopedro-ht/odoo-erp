<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_access_vault_set_secret_wizard_form" model="ir.ui.view">
        <field name="name">access.vault.set_secret.wizard.form</field>
        <field name="model">access.vault.set_secret.wizard</field>
        <field name="arch" type="xml">
            <form string="Definir / Rotacionar Segredo">
                <group>
                    <field name="secret_id" readonly="1"/>
                    <field name="secret_value" password="True"/>
                </group>
                <footer>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    <button string="Confirmar" class="btn-primary" type="object" name="action_confirm"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_access_vault_set_secret_wizard" model="ir.actions.act_window">
        <field name="name">Definir Segredo</field>
        <field name="res_model">access.vault.set_secret.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'dialog_size': 'large'}</field>
    </record>
</odoo>


