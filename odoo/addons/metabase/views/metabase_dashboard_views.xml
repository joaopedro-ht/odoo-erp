<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_metabase_dashboard_tree" model="ir.ui.view">
        <field name="name">metabase.dashboard.tree</field>
        <field name="model">metabase.dashboard</field>
        <field name="arch" type="xml">
            <list string="Dashboards" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="active"/>
                <field name="url"/>
                <button name="action_open_viewer" type="object" string="Visualizar" class="btn btn-primary"/>
            </list>
        </field>
    </record>

    <record id="view_metabase_dashboard_form" model="ir.ui.view">
        <field name="name">metabase.dashboard.form</field>
        <field name="model">metabase.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <sheet>
                    <group>
                        <field name="active"/>
                        <field name="sequence"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                    </group>
                    <group>
                        <field name="url"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_metabase_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboards</field>
        <field name="res_model">metabase.dashboard</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Registre dashboards pÃºblicos do Metabase para o time acessar rapidamente.</p>
        </field>
    </record>

</odoo>


